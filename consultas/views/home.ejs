<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" defer></script>
    <link rel="stylesheet" href="/styles/index.css">
    <title>Home</title>
    
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/home">
                <i class="fa-solid fa-house"></i> Home
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                <i class="fa-solid fa-user-plus"></i> Cadastro
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="/register">Cadastrar como Cliente</a></li>
                <li><a class="dropdown-item" href="/register-profissional">Cadastrar como Profissional</a></li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">
                <i class="fa-solid fa-right-to-bracket"></i> Login
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="content">
      <h1>Bem-vindo à Home Page</h1>

      <div class="profissionais">
        <ul>
          <% if (profissionais && profissionais.length> 0) { %>
            <% profissionais.forEach(profissional=> { %>
              <li>
                <% if (profissional.foto) { %>
                  <img src="data:image/jpeg;base64,<%= profissional.foto.toString('base64') %>"
                    alt="Foto de <%= profissional.nome %>">
                  <% } else { %>
                    <img src="/images/default-profile.png" alt="Foto padrão">
                    <% } %>
                      <p><strong>Nome:</strong>
                        <%= profissional.nome %>
                      </p>
                      <p><strong>Formação:</strong>
                        <%= profissional.formacao %>
                      </p>
                      <p><strong>Especialidade:</strong>
                        <%= profissional.especialidade %>
                      </p>
                      <p><strong>Descrição:</strong>
                        <%= profissional.descricao %>
                      </p>
                      <p>
                        <button onclick="window.location.href='/detalhes-profissional/<%= profissional.id %>'">Saiba mais</button>

                      </p>
              </li>
              <% }) %>
                <% } else { %>
                  <li>Nenhum profissional cadastrado.</li>
                  <% } %>
        </ul>
      </div>

    </div>

    <script>
      function showDetails(profissionalId) {
        // Faz uma requisição para buscar detalhes do profissional
        fetch(`/profissionais/${profissionalId}`)
          .then(response => response.json())
          .then(data => {
            // Aqui você pode mostrar as informações do profissional em um modal ou em outra seção da página
            console.log(data); // Substitua isso pela lógica para exibir os dados
          })
          .catch(error => console.error('Erro:', error));
      }

      const menuToggle = document.getElementById('menu-toggle');
      const navbar = document.getElementById('navbar');

      menuToggle.addEventListener('click', () => {
        navbar.classList.toggle('active');
      });
    </script>

  </body>

</html>