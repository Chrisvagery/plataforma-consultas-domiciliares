<!DOCTYPE html>
<html lang="pt-BR">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro Profissional</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Fonte Jost -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet">
    <!-- Link com CSS -->
    <link rel="stylesheet" href="/styles/paginacadastroPessoal/cadastroPessoal.css">
  </head>

  <body>
    <!-- Preloader -->
    <div id="preloader">
      <div class="spinner"></div>
    </div>

    <!-- Header -->
    <header class="p-4">
      <button onclick="history.back()" class="btn btn-primary"><i class="bi bi-arrow-left text-black"></i></button>
    </header>

    <!-- Main -->
    <main>
      <div class="container d-flex justify-content-center align-items-center div-cadastro">
        <div class="parte-branca">
          <form id="professionalRegisterForm" class="container" enctype="multipart/form-data">
            <h3 class="text-center mb-2 titulo-cadastro">Cadastro Profissional</h3>
            <div class="row">
              <!-- Primeira Coluna -->
              <div class="col-md-6 parte-preta">
                <div class="mb-2">
                  <label for="nome" class="form-label">Nome</label>
                  <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" >
                    <div id="error-nome" class="text-danger"></div>
                </div>
                <div class="mb-2">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Email" >
                    <div id="error-email" class="text-danger"></div>
                </div>
                <div class="mb-2">
                  <label for="cpf" class="form-label">CPF</label>
                  <input type="text" class="form-control" id="cpf" name="cpf" placeholder="000.000.000-00"
                    onblur="validarCPF()" >
                  <small id="cpfError" class="text-danger d-none">CPF inválido. Use o formato 000.000.000-00.</small>
                    <div id="error-cpf" class="text-danger"></div>
                </div>
                <div class="mb-2 position-relative">
                  <label for="senha" class="form-label">Senha</label>
                  <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha" >
                  <button type="button" class="btn btn-link position-absolute" id="togglePassword">
                    <i class="bi bi-eye"></i>
                  </button>
                </div>
                <div class="mb-2">
                  <label for="genero" class="form-label">Gênero</label>
                  <select id="genero" name="genero" class="form-control">
                    <option value="">Selecione</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Feminino">Feminino</option>
                    <option value="Outro">Outro</option>
                  </select>
                </div>
                <div class="mb-2">
                  <label for="dataNascimento" class="form-label">Data de Nascimento</label>
                  <input type="date" class="form-control" id="dataNascimento" name="dataNascimento">
                </div>
                <div class="mb-2">
                  <label for="telefone" class="form-label">Telefone</label>
                  <input type="text" class="form-control" id="telefone" name="telefone" placeholder="(00) 00000-0000"
                    onblur="validarTelefone()">
                  <small id="telefoneError" class="text-danger d-none">Telefone inválido. Use o formato (00)
                    00000-0000.</small>
                </div>
              </div>

              <!-- Segunda Coluna -->
              <div class="col-md-6 parte-preta">
                <div class="mb-2">
                  <label for="formacao" class="form-label">Formação</label>
                  <input type="text" class="form-control" id="formacao" name="formacao" placeholder="Formação" >
                </div>
                <div class="mb-2">
                  <label for="especialidade" class="form-label">Especialidade</label>
                  <input type="text" class="form-control" id="especialidade" name="especialidade"
                    placeholder="Especialidade" >
                </div>
                <div class="mb-2">
                  <label for="tempo_experiencia" class="form-label">Tempo de Experiência</label>
                  <input type="number" class="form-control" id="tempo_experiencia" name="tempo_experiencia"
                    placeholder="Tempo de Experiência">
                </div>
                <div class="mb-2">
                  <label for="crefito_ou_crm" class="form-label">CREFITO ou CRM</label>
                  <input type="text" class="form-control" id="crefito_ou_crm" name="crefito_ou_crm"
                    placeholder="CREFITO ou CRM">
                </div>
                <div class="mb-2">
                  <label for="descricao" class="form-label">Descrição do profissional</label>
                  <textarea class="form-control" id="descricao" name="descricao" placeholder="Descrição do profissional"
                    rows="2" ></textarea>
                </div>
                <div class="mb-2">
                  <label for="foto" class="form-label">Foto</label>
                  <input type="file" class="form-control" id="foto" name="foto" accept="image/*">
                </div>
                <div class="mb-2">
                  <label for="cidade" class="form-label">Cidade(s) de atuação</label>
                  <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Cidade" >
                </div>
              </div>
            </div>
            <div class="text-center mt-4">
              <button type="submit" class="custom-button">Cadastrar</button>
            </div>
            <div class="mt-3 text-center">
              <p>Já é um membro? <a id="loginLink" href="/login">Faça login</a></p>
            </div>
          </form>
          <div id="responseMessage"></div>

        </div>
      </div>
    </main>

    <script src="/javascript/cadastro_profissional.js"></script>
    <script src="/javascript/jsCadastroPessoal/preloader.js"></script>
    <script src="/javascript/jsCadastroPessoal/mostrarimagem.js"></script>
    <script src="/javascript/jsCadastroPessoal/buscarcep.js"></script>
  </body>

</html>